{
  "openapi": "3.0.3",
  "info": {
    "title": "RentalX Documentation",
    "description": "This is an API Rent for cars",
    "version": "1.0.0",
    "contact": {
      "email": "caiolucasps2015@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "summary": "Create a category",
        "description": "Create a new category passing name and description",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": { 
                  "name": "SUV",
                  "description": "A SUV car"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "summary": "List all categories",
        "description": "Return all categories saved on database",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": { 
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}