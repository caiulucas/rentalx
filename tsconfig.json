{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@database/*": ["database/*"],
      "@utils/*":  ["utils/*"]
    }
  }
}